{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3MixedActions",
            "Effect": "Allow",
            "Action": [
                "s3:Get*",
                "s3:ListBucket",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::my-bucket",
                "arn:aws:s3:::my-bucket/*"
            ]
        },
        {
            "Sid": "EC2ReadOnlyActions",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*",
                "ec2:List*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DenyS3Delete",
            "Effect": "Deny",
            "Action": "s3:Delete*",
            "Resource": "arn:aws:s3:::my-bucket/*"
        }
    ]
}